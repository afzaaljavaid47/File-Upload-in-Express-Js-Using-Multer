{{>header}}
<div class="container-fluid d-flex justify-content-center mt-5">
<form method="POST" action="/login" class="w-50">
    <div class="form-group mb-3">
        <label for="userName" class="form-label">User Name</label>
        <input type="text" id="userName" placeholder="Enter username" class="form-control" name="userName"/>
    </div>
    <div class="form-group mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" placeholder="Enter password" class="form-control mb-2" name="password"/>
        <input for="checkBx" type="checkbox" onclick="myFunction()">&nbsp;<span id="checkBx">Show Password</span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    {{#if error}}  
        <p class="mt-3 text-center text-danger">{{error}}</p>                    
    {{/if}}
</form>
</div>
{{>footer}}